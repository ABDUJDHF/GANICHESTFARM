spawn(function()
    wait(5)
    while task.wait(10) do  -- â±ï¸ ÙŠÙ†ØªØ¸Ø± 10 Ø«ÙˆØ§Ù†ÙŠ Ø¨Ø§Ù„Ø¶Ø¨Ø·
        if getgenv().Chest_Farm and game.Players.LocalPlayer.Character then
            pcall(function()
                local hrp = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
                if not hrp then return end

                -- ğŸ” Ø¯ÙˆØ± Ø¹Ù„Ù‰ Ø£Ù‚Ø±Ø¨ Chest ÙÙŠÙ‡ TouchInterest
                local targetChest = nil
                local minDist = math.huge
                
                for _, obj in pairs(workspace:GetDescendants()) do
                    if obj:IsA("BasePart") and (obj.Name == "Chest3" or obj.Name == "Chest2" or obj.Name == "Chest1") then
                        -- ÙØ­Øµ TouchInterest
                        for _, child in pairs(obj:GetDescendants()) do
                            if child:IsA("TouchTransmitter") then
                                local dist = (hrp.Position - obj.Position).Magnitude
                                if dist < minDist then
                                    minDist = dist
                                    targetChest = obj
                                end
                                break
                            end
                        end
                    end
                end

                -- ğŸ¯ Ø®Ø° Ø§Ù„Ù€ Chest
                if targetChest then
                    print("ğŸ•Šï¸ [SAFE MODE] Teleporting to " .. targetChest.Name)
                    hrp.CFrame = targetChest.CFrame * CFrame.new(0, 2, 0)
                    task.wait(0.1)
                    
                    for i = 1, 4 do
                        firetouchinterest(hrp, targetChest, 0)
                        task.wait(0.02)
                        firetouchinterest(hrp, targetChest, 1)
                        task.wait(0.02)
                    end
                    
                    if targetChest.Name == "Chest3" then 
                        print("ğŸ•Šï¸ğŸ’° Chest3 +2000 (Safe Mode)")
                    else
                        print("ğŸ•Šï¸âœ… " .. targetChest.Name .. " collected")
                    end
                    
                    -- ğŸ ÙŠØ±Ø¬Ø¹ Ù„Ù…ÙƒØ§Ù†Ù‡ ÙˆÙŠØ³ØªÙ†Ø§ 10 Ø«ÙˆØ§Ù†ÙŠ (Ø§Ù„Ù€ task.wait(10) ÙÙˆÙ‚)
